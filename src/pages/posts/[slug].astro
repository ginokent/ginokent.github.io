---
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';
import TableOfContents from '../../components/TableOfContents.astro';
import { formatDate, translations } from '../../lib/i18n';

export async function getStaticPaths() {
  // 日本語記事のみ（en/ で始まらない）
  const posts = await getCollection('posts', ({ slug }) => !slug.startsWith('en/'));
  return posts.map((post) => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

const { post } = Astro.props;
const { Content, headings } = await post.render();
const t = translations.ja;
---

<BaseLayout
  title={post.data.title}
  description={post.data.description}
  ogType="article"
  publishedAt={post.data.publishedAt}
  updatedAt={post.data.updatedAt}
  lang="ja"
  canonicalPath={`/posts/${post.slug}`}
>
  <article class="article">
    <header class="article-header">
      <h1 class="article-title">{post.data.title}</h1>
      <div class="article-meta">
        <span>
          {t.published}: <time datetime={post.data.publishedAt.toISOString()}>
            {formatDate(post.data.publishedAt, 'ja')}
          </time>
        </span>
        {post.data.updatedAt && (
          <span>
            {t.updated}: <time datetime={post.data.updatedAt.toISOString()}>
              {formatDate(post.data.updatedAt, 'ja')}
            </time>
          </span>
        )}
      </div>
      {post.data.tags.length > 0 && (
        <div class="article-tags">
          {post.data.tags.map((tag) => (
            <a href={`/tags/${tag}`} class="tag">{tag}</a>
          ))}
        </div>
      )}
    </header>

    <TableOfContents headings={headings} lang="ja" />

    <div class="article-content">
      <Content />
    </div>
  </article>
</BaseLayout>
